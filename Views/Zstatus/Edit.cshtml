@model WCAProject.Models.Zstatus

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Status: @Html.DisplayFor(model => model.inq_status)</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ZstatusId" />
            <div class="form-group">
                <label asp-for="inq_status" class="control-label"></label>
                <input asp-for="inq_status" class="form-control" />
                <span asp-validation-for="inq_status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="report" class="control-label"></label>
                <input asp-for="report" class="form-control" />
                <span asp-validation-for="report" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="active" class="control-label"></label>
                <input asp-for="active" class="form-control" />
                <span asp-validation-for="active" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="credstatus" class="control-label"></label>
                <input asp-for="credstatus" class="form-control" />
                <span asp-validation-for="credstatus" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="temp" class="control-label"></label>
                <input asp-for="temp" class="form-control" />
                <span asp-validation-for="temp" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save Status" class="btn btn-success" />
                <a type="button" class="btn btn-secondary" asp-action="Index">Back to All Statuses</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
