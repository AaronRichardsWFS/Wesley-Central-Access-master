@model WCAProject.Models.Zopother

@{
    ViewData["Title"] = "Create";
}

<h1>Add Other Op</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="opother" class="control-label"></label>
                <input asp-for="opother" class="form-control" />
                <span asp-validation-for="opother" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Add Other Op" class="btn btn-success" />
                <a type="button" class="btn btn-secondary" asp-action="Index">Back to All Other Ops</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
