@model WCAProject.Models.Zrace

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete Race: @Html.DisplayFor(model => model.race)</h1>
<h3>Are you sure you want to delete this?</h3>
<hr/>
<div class="row">
    <div class="col-md-4">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="race" class="control-label"></label>
            <input asp-for="race" class="form-control" disabled/>
            <span asp-validation-for="race" class="text-danger"></span>
        </div>
    </div>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="ZraceId" />
    <input type="submit" value="Delete Race" class="btn btn-danger" />
    <a type="button" class="btn btn-secondary" asp-action="Index">Back to All Races</a>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
