@model WCAProject.Models.ClientService

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<hr />
<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<div class="row justify-content-between">
    <div class="col-md-8 col-md-offset-1 rounded p-3 mb-2 table-active text-dark">
      <div class="row">
        <div class="col-md-6 col-md-offset-1">
          <label asp-for="ClientId" class="control-label"></label>
          <input type="hidden" asp-for="ClientId">
          <br/><p class="font-weight-bold" id="client-selected">@(Model.Client.name)</p>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12 col-md-offset-1">
          <label asp-for="intext" class="control-label"></label>
          <select asp-for="intext" class="form-control" disabled>
            <option selected disabled>@Html.DisplayFor(model => model.intext)</option>
          </select>
          <span asp-validation-for="intext" class="text-danger"></span>
        </div>
      </div><br style="line-height:5px;" />
      @{var intextv = @Model.intext;}
      @if(intextv == "Internal"){
        <div class="row">
          <div class="col-md-4 col-md-offset-1">
            <label asp-for="ZinternalId" class="control-label"></label>
            <select asp-for="ZinternalId" class="form-control" asp-items="@ViewBag.ZinternalId" disabled>
              <option value = "" selected disabled>@Html.DisplayFor(model => model.Zinternal.internal_type)</option></select>
            <span asp-validation-for="ZinternalId" class="text-danger"></span>
          </div>
          <div class="col-md-8 col-md-offset-1">
            <label asp-for="intnote" class="control-label"></label>
            <input asp-for="intnote" class="form-control" disabled/>
            <span asp-validation-for="intnote" class="text-danger"></span>
          </div><p style = "font-size:5px" class = "text-white">_</p>
        </div>
      }else if(intextv == "External"){
        <div class="row">
          <div class="col-md-4 col-md-offset-1">
            <label asp-for="exttype" class="control-label"></label>
            <input asp-for="exttype" class="form-control" disabled/>
            <span asp-validation-for="exttype" class="text-danger"></span>
          </div>
          <div class="col-md-8 col-md-offset-1">
            <label asp-for="extnote" class="control-label"></label>
            <input asp-for="extnote" class="form-control" disabled/>
            <span asp-validation-for="extnote" class="text-danger"></span>
          </div><p style = "font-size:5px" class = "text-white">_</p>
        </div>
      }
      <div class="row">
        <div class="col-md-6 col-md-offset-1">
          <label asp-for="ServiceId" class="control-label"></label>
          <select asp-for="ServiceId" class="form-control" asp-items="@ViewBag.ServiceId" disabled>
            <option value = "" selected disabled>@Html.DisplayFor(model => model.Service.service_desc)</option></select>
          <span asp-validation-for="ServiceId" class="text-danger"></span>
        </div>
        @{var servv = @Model.Service != null ? @Model.Service.service_desc : null;}
        @if(servv == "OP"){
          <div class=col-md-6 col-md-offset-1">
              <label asp-for="optype" class="control-label"></label>
              <input asp-for="optype" class="form-control" disabled/>
              <span asp-validation-for="optype" class="text-danger"></span>
          </div>
        }
      </div><br style="line-height:5px;" />
      <div class="row">
        <div class="col-md-6 col-md-offset-1">
          <label asp-for="ZsiteId" class="control-label"></label>
          <select asp-for="ZsiteId" class="form-control"  asp-items="@ViewBag.ZsiteId" disabled>
            <option value = "" selected disabled>@Html.DisplayFor(model => model.Zsite.site)</option></select>
          <span asp-validation-for="ZsiteId" class="text-danger"></span>
        </div>
        <div class="col-md-6 col-md-offset-1">
          <label asp-for="site2" class="control-label"></label>
          <input asp-for="site2" class="form-control" disabled/>
          <span asp-validation-for="site2" class="text-danger"></span>
        </div><p style = "font-size:5px" class = "text-white">_</p>
      </div>
      @{var sitev = @Model.Zsite != null ? @Model.Zsite.site : null;}
      @if(sitev == "School"){
        <div class="row">
          <div class="col-md-12 col-md-offset-1">
            <label asp-for="ZschoolId" class="control-label"></label>
            <select asp-for="ZschoolId" class="form-control" asp-items="@ViewBag.ZschoolId" disabled>
              <option value = "" selected disabled>@Html.DisplayFor(model => model.Zschool.displayname)</option></select>
            <span asp-validation-for="ZschoolId" class="text-danger"></span>
          </div><p style = "font-size:5px" class = "text-white">_</p>
        </div>
      }
      @if((servv == "BHRS") || (servv == "IFC") || (servv == "WK")){
        <div class="row">
          <div class="col-md-4 col-md-offset-1">
            <label asp-for="psychologist" class="control-label"></label>
            <input asp-for="psychologist" class="form-control" disabled/>
            <span asp-validation-for="psychologist" class="text-danger"></span>
          </div>
          <div class="col-md-4 col-md-offset-1">
            <label asp-for="eval_date" class="control-label"></label>
            <input asp-for="eval_date" class="form-control" disabled/>
            <span asp-validation-for="eval_date" class="text-danger"></span>
          </div>
          <div class="col-md-4 col-md-offset-1">
            <label asp-for="pocdates" class="control-label"></label>
            <textarea asp-for="pocdates" class="form-control" disabled></textarea>
            <span asp-validation-for="pocdates" class="text-danger"></span>
          </div><p style = "font-size:5px" class = "text-white">_</p>
        </div>
        <div class="row">
          <div class="col-md-4 col-md-offset-1">
            <label asp-for="diagnosis" class="control-label"></label>
            <input asp-for="diagnosis" class="form-control" disabled/>
            <span asp-validation-for="diagnosis" class="text-danger"></span>
          </div>
          <div class="col-md-4 col-md-offset-1">
            <label asp-for="homeloc" class="control-label"></label>
            <input asp-for="homeloc" class="form-control" disabled/>
            <span asp-validation-for="homeloc" class="text-danger"></span>
          </div>
          <div class="col-md-4 col-md-offset-1">
            <label asp-for="schoolloc" class="control-label"></label>
            <input asp-for="schoolloc" class="form-control" disabled/>
            <span asp-validation-for="schoolloc" class="text-danger"></span>
          </div><p style = "font-size:5px" class = "text-white">_</p>
        </div>
        <div class="row">
          <div class="col-md-12 col-md-offset-1">
            <label asp-for="prescription" class="control-label"></label>
            <textarea asp-for="prescription" class="form-control" disabled></textarea>
            <span asp-validation-for="prescription" class="text-danger"></span>
          </div><p style = "font-size:5px" class = "text-white">_</p>
        </div>
        <div class="row">
          <div class="col-md-12 col-md-offset-1">
            <label asp-for="family_avail" class="control-label"></label>
            <textarea asp-for="family_avail" class="form-control" disabled></textarea>
            <span asp-validation-for="family_avail" class="text-danger"></span>
          </div>
        </div><p style = "font-size:5px" class = "text-white">_</p>
      }
      <hr/>
      <div class = "row">
        <div class="col-md-6 col-md-offset-1">
          <label asp-for="trackdate" class="control-label"></label>
          <input asp-for="trackdate" class="form-control" disabled></input>
          <span asp-validation-for="trackdate" class="text-danger"></span>
        </div>
        <div class="col-md-6 col-md-offset-1">
          <label asp-for="tracknote" class="control-label"></label>
          <input asp-for="tracknote" class="form-control" disabled></input>
          <span asp-validation-for="tracknote" class="text-danger"></span>
        </div>
      </div>
    </div>
    <div class = "col-md ml-1 col-md-offset-1 rounded p-3 mb-2 table-active text-dark">
      <div class = "row">
        <div class="col-md-12 col-md-offset-1">
          <label asp-for="ZstatusId" class="control-label"></label>
          <select asp-for="ZstatusId" class="form-control"  asp-items="@ViewBag.ZstatusId" disabled>
            <option value = "" selected disabled>@Html.DisplayFor(model => model.Zstatus.inq_status)</option></select>
          <span asp-validation-for="ZstatusId" class="text-danger"></span>
        </div>
      </div><br style="line-height:5px;" />
      <div class = "row">
        <div class="col-md-12 col-md-offset-1">
          <label asp-for="ZreasonId" class="control-label"></label>
          <select asp-for="ZreasonId" class="form-control"  asp-items="@ViewBag.ZreasonId" disabled>
            <option value = "" selected disabled>@Html.DisplayFor(model => model.Zreason.final_reason)</option></select>
          <span asp-validation-for="ZreasonId" class="text-danger"></span>
        </div>
      </div><br style="line-height:5px;" />
      <div class = "row">
        <div class="col-md-12 col-md-offset-1">
          <label asp-for="ZworkerId" class="control-label"></label>
          <select asp-for="ZworkerId" class="form-control" asp-items="@ViewBag.ZworkerId" disabled>
            <option value = "" selected disabled>@Html.DisplayFor(model => model.Zworker.worker)</option></select>
          <span asp-validation-for="ZworkerId" class="text-danger"></span>
        </div>
      </div><br style="line-height:5px;" />
      <div class = "row">
        <div class="col-md-12 col-md-offset-1">
          <label asp-for="recdate" class="control-label"></label>
          <input asp-for="recdate" class="form-control" disabled/>
          <span asp-validation-for="recdate" class="text-danger"></span>
        </div>
      </div><br style="line-height:5px;" />
      <div class = "row">
        <div class="col-md-12 col-md-offset-1">
          <label asp-for="closedate" class="control-label"></label>
          <input asp-for="closedate" class="form-control" disabled/>
          <span asp-validation-for="closedate" class="text-danger"></span>
        </div>
      </div>
    </div>

<div class = "row">
  <div class="col-md-8 col-md-offset-1">
    <h3>Are you sure you want to delete this inquiry?</h3>
  </div>
  <div class="col-md-4 col-md-offset-1">
    <form asp-action="Delete" align = "right">
        <input type="hidden" asp-for="ClientServiceId" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a class="btn btn-secondary" asp-action="Index">Back to List</a>
    </form>
  </div>
</div>
