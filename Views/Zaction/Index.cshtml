@model IEnumerable<WCAProject.Models.Zaction>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table table-striped">
    <thead class = "thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.action)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.report)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.active)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td class = "align-middle">
                @Html.DisplayFor(modelItem => item.action)
            </td>
            <td class = "align-middle">
                @Html.DisplayFor(modelItem => item.report)
            </td>
            <td class = "align-middle">
                @Html.DisplayFor(modelItem => item.active)
            </td>
            <td class = "align-middle">
                <a asp-action="Edit" asp-route-id="@item.ZactionId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ZactionId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ZactionId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
