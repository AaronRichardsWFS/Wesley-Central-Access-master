@model WCAProject.ViewModels.ClientDetailsViewModel
@using Microsoft.AspNetCore.Authorization
@inject IAuthorizationService AuthorizationService

@{
    ViewData["Title"] = "View";
}

    <h1>View - @Model.Client.cfirst @Model.Client.clast - @(Model.Client.ClientId)</h1>


<hr />
<form asp-action="View">
