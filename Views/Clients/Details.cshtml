            <div class="row">
                <div class="col-md-3 col-md-offset-1">
                    <label asp-for="Client.ZcountyId" class="control-label"></label>
                    <select asp-for="Client.ZcountyId" class="form-control" disabled>
                        <option selected disabled>@Html.DisplayFor(model => model.Client.Zcounty.county)</option>
                    </select>
                    <span asp-validation-for="Client.ZcountyId" class="text-danger"></span>


 


